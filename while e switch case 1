import * as leitor from "readline-sync"
let menu : Boolean = true
while(menu){
    let opcao = leitor.questionInt("informe um numero de 1 a 3 ou 4 para sair ")

    switch(opcao){
        case 1:
            console.log('mensagem 1 ');
            break;
        case 2 :
            console.log('mensagem 2');
            break;
        case 3 :
            console.log('mensagem 3 ');
            break ;
        case 4:
            console.log('saindo ');
        default:
            console.log('opcao inexistente ');
            break
                
                
                    
            
    }

}
